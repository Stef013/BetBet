@model BetBet.ViewModels.BetViewModel
@using BetBet.Model;

@{
    ViewBag.UserID = "Create";
}

<h2>Create Bet</h2>

<div ALIGN="center">
    <h3><b>@Model.Match.HomeTeamName vs @Model.Match.AwayTeamName</b></h3>

</div>

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*-------------------------Hier gebleven, labels en multiplier moeten toegevoegd worden---------------------------------*@
    @Html.RadioButtonFor(model => model.Prediction, PredictionEnum.HomeTeam)@Html.Label(Model.Match.HomeTeamName)
    @Html.RadioButtonFor(model => model.Prediction, PredictionEnum.Draw)@Html.Label("       Draw       ")
    @Html.RadioButtonFor(model => model.Prediction, PredictionEnum.AwayTeam)@Html.Label(Model.Match.AwayTeamName)<br />

    <div class="form-group">
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
